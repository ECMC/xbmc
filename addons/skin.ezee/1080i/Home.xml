		<include>CommonBackground</include>
		<control type="image">
			<description>LOGO</description>
			<posx>91</posx>
			<posy>71</posy>
			<width>60</width>
			<height>70</height>
			<aspectratio aligny="top" align="left">keep</aspectratio>
			<texture>ezee/ezee_logo.png</texture>
			<include>VisibleFadeEffect</include>
			<include>Window_OpenClose_Animation</include>
			<visible>!Skin.HasSetting(homepageWeatherinfo)</visible>
		</control>
			<control type="radiobutton" id="19">
				<description>Global Search</description>
				<posx>255</posx>
				<posy>90</posy>
				<height>31</height>
				<width>323</width>
				<textwidth>150</textwidth>
				<textoffsetx>10</textoffsetx>
				<align>left</align>
				<aligny>center</aligny>
				<font>font12</font>
				<textcolor>grey2</textcolor>
				<focusedcolor>white</focusedcolor>
				<texturefocus flipy="true" border="5">HomeSubFO.png</texturefocus>
				<texturenofocus flipy="true" border="5">HomeSubNF.png</texturenofocus>
				<pulseonselect>false</pulseonselect>
				<label>137</label>
				<onclick>RunScript(script.globalsearch)</onclick>
				<textureradiofocus>icon_search.png</textureradiofocus>
				<textureradionofocus>icon_search.png</textureradionofocus>
				<onleft>20</onleft>
				<onright>20</onright>
				<onup>20</onup>
				<ondown>20</ondown>
				<visible>System.HasAddon(script.globalsearch)</visible>
                <visible>!Container(9000).Hasfocus(4) + !Skin.HasSetting(HomepageHideRecentlyAddedPicture)</visible>
			</control> 		
			<!-- Time lables -->			
		<control type="group" id="40">
			<posx>250</posx>
			<posy>350</posy>
			<width>200</width>
			<control type="label" id="41">
				<description>Month label</description>
				<posx>0</posx>
				<posy>0</posy>
				<align>center</align>
				<aligny>top</aligny>
				<font>home_month</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<label>$INFO[System.Date(MMM)]</label>
			</control>
			<control type="label" id="42">
				<posx>0</posx>
				<posy>10</posy>
				<description>Date label</description>
				<align>center</align>
				<aligny>top</aligny>
				<font>home_day</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<label>$INFO[System.Date(dd)]</label>
			</control>
			<control type="label"  id="43">
